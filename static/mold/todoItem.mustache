{{> head }}

<div class="header clearfix">
    <a class="btn btn-default pull-right" href="/todo/list" role="button">To Do List</a>

    <h4 class="text-muted">Hapi To Do Demo</h4>
</div>

{{# messages }}
    <div class="alert alert-{{ type }} alert-dismissible fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
        {{ message }}
    </div>
{{/ messages }}

<form method="post">
    <div class="form-group">
        <textarea class="form-control" rows="5" name="value" placeholder="What to do...">{{ item.value }}</textarea>
    </div>
    <div class="checkbox">
        <label><input name="done" type="checkbox" {{# item.done }}checked{{/item.done}}> Done</label>
    </div>
    <button type="submit" class="btn btn-default">Save</button>
    <a class="btn btn-default" href="/todo/list" role="button">Cancel</a>

    <input type="hidden" name="id" value="{{ item.id }}">
    <input type="hidden" name="crumb" value="{{ crumb }}">
    <input type="hidden" name="methodFallback" value="{{ methodFallback }}">
</form>

{{> foot }}
