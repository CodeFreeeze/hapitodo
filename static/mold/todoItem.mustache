{{> head }}

<div class="header clearfix">
    <a class="btn btn-default pull-right" href="/todo/list" role="button">To Do List</a>
    <h4 class="text-muted">Hapi To Do Demo</h4>
</div>

<form id="todoItem">
    <div class="form-group">
        <textarea class="form-control" rows="5" name="content" placeholder="What to do...">{{ item.content }}</textarea>
    </div>
    <div class="checkbox">
        <label><input name="done" type="checkbox" {{# item.done }}checked{{/item.done}}> Done</label>
    </div>

    <button type="submit" class="btn btn-default">Save</button>
    <a class="btn btn-default" href="/todo/list" role="button">Cancel</a>

    <input type="hidden" name="id" value="{{ item.id }}">
    <input type="hidden" name="crumb" value="{{ crumb }}">
</form>

{{> foot }}
