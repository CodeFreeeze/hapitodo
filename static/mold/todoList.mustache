{{> head }}

<div class="header clearfix">
    <a class="btn btn-success pull-right" href="/todo" role="button">New To Do</a>

    <h4 class="text-muted">Hapi To Do Demo</h4>
</div>

{{# messages }}
    <div class="alert alert-{{ type }} alert-dismissible fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
        {{ message }}
    </div>
{{/ messages }}

<form method="post">
    <div class="input-group">
        <input type="text" class="form-control" name="value" placeholder="What to do...">
      <span class="input-group-btn">
        <button class="btn btn-default" type="submit">Save</button>
      </span>
    </div>

    <input type="hidden" name="crumb" value="{{ crumb }}">
    <input type="hidden" name="methodFallback" value="create">
</form>

<br>

<table class="table table-responsive">
    <tbody>
    {{# list }}
        <tr>
            <td class="todo-value">
                {{ value }}
            </td>
            <td>
                <form method="post">
                    <button class="btn btn-link" type="submit"><span class="glyphicon glyphicon-ok done-{{ done }}"></span></button>
                    <input type="hidden" name="id" value="{{ id }}">
                    <input type="hidden" name="crumb" value="{{ crumb }}">
                    <input type="hidden" name="methodFallback" value="update">
                </form>
            </td>
            <td>
                <a class="btn btn-link" href="/todo/{{ id }}" role="button">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
            </td>
            <td>
                <form method="post">
                    <button class="btn btn-link" type="submit"><span class="glyphicon glyphicon-trash"></span></button>
                    <input type="hidden" name="id" value="{{ id }}">
                    <input type="hidden" name="crumb" value="{{ crumb }}">
                    <input type="hidden" name="methodFallback" value="remove">
                </form>
            </td>
        </tr>
    {{/ list }}
    </tbody>
</table>

{{> foot }}
